<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servir"
        android:textSize="16pt"
        android:textColor="#333"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/lbl_service_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nom Prenom"
        android:textSize="12pt"/>
    <TextView
        android:id="@+id/lbl_service_solde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5000 Fbu"
        android:textSize="10pt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="produit"
        android:textSize="9pt"/>
    <Spinner
        android:id="@+id/combo_service_products"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:backgroundTint="#aaa">
    </Spinner>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btn_service_decrease"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="-"
            android:textSize="12pt"
            android:padding="0dp"
            android:layout_gravity="center"
            android:background="@drawable/componant_button"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/lbl_guest_qtt"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:text="0"
                android:textSize="14pt"
                android:padding="0dp"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/lbl_guest_total"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="10 000 Fbu"
                android:textSize="6pt"
                android:padding="0dp"
                android:textAlignment="center"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_service_increase"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="+"
            android:textSize="12pt"
            android:padding="0dp"
            android:layout_gravity="center"
            android:background="@drawable/componant_button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/btn_service_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="annuler"
            android:textSize="7pt"
            android:textColor="#f99"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
        <Button
            android:id="@+id/btn_service_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="soumettre"
            android:textSize="7pt"
            android:textColor="@color/colorAccent"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
    </LinearLayout>
</LinearLayout>